<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MusicAppAndroid." parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark_slate_blue</item>
        <item name="colorPrimaryVariant">@color/dark_slate_blue</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/light_steel_blue</item>
        <item name="colorSecondaryVariant">@color/light_steel_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    //Theme for Activities
    <style name="darkSlateBlue" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_slate_blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/light_steel_blue</item>
        <item name="colorSecondaryVariant">@color/steel_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_slate_blue</item>
    </style>

    //Theme for Navigation Drawer
    <style name="darkSlateBlueNav" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/dark_slate_blue</item>
        <item name="colorSecondaryVariant">@color/steel_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_slate_blue</item>
